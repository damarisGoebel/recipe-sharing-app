      <div class="recipe-level recipe-txt">
        <p> Schwierigkeitsgrad: {{this.level}} </p>
      </div>
      {{/if}}

      {{#if this.nutrition}}

      <div class="recipe-nutrition">
        <p>{{this.nutrition}}</p>
      </div>
      {{/if}}

      </div>
    </div>
    </div>
    {{/each}}

