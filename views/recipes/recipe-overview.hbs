<div class="container">

<h1>Übersicht über alle Rezepte</h1>
<p id="counter">{{count}} Ergebnisse</p>

{{!-- Filter --}}

<form action="/rezepte" method="get">
  <label for="level">Schwierigkeitsgrad</label>
  <select id="level" name="level">
     <option value=''>Alle</option>
    <option value="Easy Peasy">Easy Peasy</option>
    <option value="Amateur Chef">Amateur Chef</option>
    <option value="UltraPro Chef">UltraPro Chef</option>

  </select>
  <label for="nutrition">Ernährung</label>
    <select id="nutrition" name="nutrition">

      <option value=''>Alle</option>
      {{#each nutrition}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}

  </select>

    <label for="dishType">Gericht</label>
    <select id="dishType" name="dishType">

      <option value=''>Alle</option>
      {{#each dishType}}
      <option value="{{this}}">{{this}}</option>
      {{/each}}

  </select>

  {{!-- Here you can add as many filters as you want, the important thing is to name each one for example name = 'cuisine' --> This will give you access by doing req.query.cuisine--}}
  <button type="submit" id="btn-filter">Filter</button>
</form>

<br>

{{!-- Rezepteübersicht --}}
<div id="rezepte" class="row">
  {{!-- <div class="row align-items-start"> --}}
  {{!-- <div class="col-4"> --}}


    {{#each recipes}}
    <div class="col-4">
      <div class="recipe-card">
      <div class="recipe-img"><img src="{{this.image}}"> </div>
      
      <div class="recipe-text-field">
      <div class="recipe-txt">
        <a href='/rezepte/{{this.id}}'> {{this.title}}</a>
      </div>

      {{#if this.duration}}

      <div class="recipe-duration recipe-txt">
        <p> Zubereitungszeit: {{this.duration}} </p>
      </div>

      {{/if}}


      {{#if this.level}}
      <div class="recipe-level recipe-txt">
        <p> Schwierigkeitsgrad: {{this.level}} </p>
      </div>
      {{/if}}

      {{#if this.nutrition}}

      <div class="recipe-nutrition">
        <p>{{this.nutrition}}</p>
      </div>
      {{/if}}

      </div>
    </div>
    </div>
    {{/each}}

  {{!-- </div> --}}
</div>


<br>

<a href='/rezepte/neu' id="last-paragraph"> Du hast eine gute Rezeptidee? Erstelle jetzt ein Rezept und veröffentliche es auf HelloCook.</a>


</div>